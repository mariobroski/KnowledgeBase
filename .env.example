# ==========================================
# KnowledgeBase - Environment Configuration
# ==========================================

# --- Core Database ---
POSTGRES_SERVER=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=rag_system
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/rag_system

# --- Vector Database (Qdrant) ---
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_API_KEY=

# --- Graph Database (JanusGraph) ---
JANUSGRAPH_HOST=janusgraph
JANUSGRAPH_PORT=8182
JANUSGRAPH_TIMEOUT=30
JANUSGRAPH_RETRY_ATTEMPTS=3

# --- Embeddings ---
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# --- LLM / Text Generation ---
# Preferred provider; service will automatically fall back to Ollama if TGI is unavailable.
LLM_PROVIDER=tgi
LLM_MODEL=llama3
OLLAMA_BASE_URL=http://ollama:11434
TGI_BASE_URL=http://tgi:8080
TGI_MODEL_ID=mistralai/Mistral-7B-Instruct-v0.2
TGI_NUM_SHARD=1
TGI_MAX_BATCH_PREFILL_TOKENS=4096
TGI_MAX_INPUT_LENGTH=4096
TGI_MAX_TOTAL_TOKENS=8192
HF_TOKEN=

# --- Frontend ---
NODE_ENV=development
CHOKIDAR_USEPOLLING=true
REACT_APP_API_URL=http://localhost:8000/api

# --- Backend API ---
BACKEND_CORS_ORIGINS=["http://localhost:3000"]

# --- Optional JVM Tuning ---
ES_JAVA_OPTS=-Xms512m -Xmx512m

# --- Monitoring Flags ---
PROMETHEUS_ENABLED=false
GRAFANA_ENABLED=false
