# ===========================================
# KnowledgeBase - Open Source Configuration
# ===========================================

# Database Configuration
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=rag_system

# Vector Database Configuration
VECTOR_DB_TYPE=qdrant
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=fragments

# Alternative Vector Databases
WEAVIATE_HOST=localhost
WEAVIATE_PORT=8080
FAISS_INDEX_PATH=./faiss_index

# Graph Database Configuration
JANUSGRAPH_HOST=localhost
JANUSGRAPH_PORT=8182
JANUSGRAPH_STORAGE_BACKEND=berkeleyje
JANUSGRAPH_STORAGE_DIRECTORY=./janusgraph_data
JANUSGRAPH_TIMEOUT=30
JANUSGRAPH_RETRY_ATTEMPTS=3

# LLM Configuration (Local Models)
LLM_PROVIDER=ollama
LLM_MODEL=llama3
OLLAMA_BASE_URL=http://localhost:11434
TGI_BASE_URL=http://localhost:8080

# Embeddings Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
VECTOR_DB_PATH=./vector_db

# RAG Settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.7
FACT_CONFIDENCE_THRESHOLD=0.8
GRAPH_MAX_DEPTH=3
GRAPH_MAX_PATHS=10

# Cache Configuration
REDIS_URL=redis://localhost:6379

# API Configuration
API_V1_STR=/api
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Monitoring (Optional)
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true

# Development Settings
DEBUG=true
LOG_LEVEL=INFO
